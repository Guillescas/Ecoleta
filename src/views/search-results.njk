{% extends 'layout.njk' %}

{% set pageId = "page-search-results" %}

{% block title %}
  <title>Resultado da pesquisa</title>
{% endblock title %}

{% block styles %}
  <link rel="stylesheet" href="/styles/search-results.css">
{% endblock styles %}  

{% block content %}
  {% include 'parts/page-header.njk' %}

  <main>

    {% if total > 1 %}
    <h4>
      <strong>{{total}} pontos</strong> encontrados
    </h4>
    <div class="cards">

      {% for place in places %}
        <div class="card">
          <img src="{{place.image_url}}" alt="Imagem de {{place.name}}">
          <h1>{{place.name}}</h1>
          <h3>{{place.items}}</h3>
          <p>
            {{place.city}}, {{place.state}}
            <br/>
            {{place.adress}}
            <br/>
            {{place.adress2}}
          </p>
        </div>
      {% endfor %}

    </div>

    {% elseif total == 1 %}
    <h4>
      <strong>{{total}} ponto</strong> encontrado
    </h4>
    <div class="cards">

      {% for place in places %}
        <div class="card">
          <img src="{{place.image_url}}" alt="Imagem de {{place.name}}">
          <h1>{{place.name}}</h1>
          <h3>{{place.items}}</h3>
          <p>
            {{place.city}}, {{place.state}}
            <br/>
            {{place.adress}}
            <br/>
            {{place.adress2}}
          </p>
        </div>
      {% endfor %}

    </div>

    {% else %}
    <h4><strong>Nenhum</strong> ponto encontrado!</h4>
    {% endif %}

  </main>

{% endblock content %}
